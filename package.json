{
  "name": "database-schema-mcp",
  "version": "1.0.0",
  "description": "MCP server for extracting database schema information from multiple database types",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "database-schema-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "prepare": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "mcp",
    "database",
    "schema",
    "mysql",
    "postgresql",
    "sqlite",
    "oracle",
    "mongodb",
    "redis",
    "kafka",
    "llm",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "mysql2": "^3.11.5",
    "pg": "^8.13.1",
    "better-sqlite3": "^11.7.0",
    "oracledb": "^6.7.0",
    "mongodb": "^6.11.0",
    "ioredis": "^5.4.2",
    "kafkajs": "^2.2.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "@vitest/coverage-v8": "^2.1.8",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
