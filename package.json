{
  "name": "database-schema-mcp",
  "version": "1.0.0",
  "description": "MCP server for extracting database schema information from multiple database types",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "database-schema-mcp": "dist/index.js",
    "db-schema": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "prepare": "npm run build",
    "test": "npm run test:unit",
    "test:unit": "vitest run tests/unit/**/*.test.ts",
    "test:integration": "vitest run tests/integration/*.integration.test.ts",
    "test:integration:e2e": "vitest run tests/integration/e2e.test.ts",
    "test:integration:all": "vitest run tests/integration/**/*.test.ts",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:integration:e2e",
    "test:watch": "vitest",
    "test:watch:unit": "vitest watch tests/unit/**/*.test.ts",
    "test:watch:integration": "vitest watch tests/integration/**/*.test.ts",
    "test:coverage": "vitest run --coverage",
    "docker:up": "cd tests/integration && docker-compose up -d",
    "docker:down": "cd tests/integration && docker-compose down",
    "docker:cleanup": "cd tests/integration && docker-compose down -v"
  },
  "keywords": [
    "mcp",
    "database",
    "schema",
    "mysql",
    "postgresql",
    "opengauss",
    "sqlite",
    "oracle",
    "mongodb",
    "redis",
    "memcached",
    "kafka",
    "rabbitmq",
    "elasticsearch",
    "etcd",
    "clickhouse",
    "milvus",
    "llm",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@clickhouse/client": "^1.5.0",
    "@elastic/elasticsearch": "^8.15.0",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@zilliz/milvus2-sdk-node": "^2.4.9",
    "amqplib": "^0.10.4",
    "better-sqlite3": "^11.7.0",
    "commander": "^14.0.2",
    "etcd3": "^1.1.2",
    "ioredis": "^5.4.2",
    "kafkajs": "^2.2.4",
    "memcached": "^2.2.2",
    "mongodb": "^6.11.0",
    "mysql2": "^3.11.5",
    "oracledb": "^6.7.0",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.5",
    "@types/better-sqlite3": "^7.6.12",
    "@types/memcached": "^2.2.10",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "@vitest/coverage-v8": "^2.1.8",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
